# Configuration du serveur
PORT=3001
NODE_ENV=development

# Configuration de la base de donn√©es MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret pour l'authentification
JWT_SECRET=your_jwt_secret_here_change_in_production

# Configuration SMTP IONOS pour l'envoi d'emails
SMTP_HOST=smtp.ionos.fr
SMTP_PORT=465
SMTP_USER=contact@yourdomain.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM=contact@yourdomain.com

# Email de la naturopathe pour recevoir les notifications
NATUROPATH_EMAIL=contact@yourdomain.com

# URL du frontend
FRONTEND_URL=https://www.yourdomain.com

# Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Configuration Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret